<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.spacechase.controllers.AdvertController">
   <center>
      <MediaView fx:id="mediaView" fitHeight="600.0" fitWidth="1000.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <Button fx:id="button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Skip Video" textAlignment="CENTER" BorderPane.alignment="BASELINE_CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <font>
            <Font name="NeuropolXRg-Regular" size="16.0" />
         </font>
      </Button>
   </bottom>
</BorderPane>
